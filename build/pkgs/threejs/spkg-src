#!/usr/bin/env bash

set -e

# https://github.com/mrdoob/three.js/releases
GIT_VERSION=r120

[ -n "${SAGE_ROOT}" ] || SAGE_ROOT="$(pwd)/../../../"


# Fetch latest version.
URL1="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/build/three.min.js"
echo "Downloading $URL1"
curl -OL "$URL1"

URL2="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/controls/OrbitControls.js"
echo "Downloading $URL2"
curl -OL "$URL2"

URL3="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/LICENSE"
echo "Downloading $URL3"
curl -OL "$URL3"

URL4="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/lines/Line2.js"
echo "Downloading $URL4"
curl -OL "$URL4"

URL5="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/lines/LineGeometry.js"
echo "Downloading $URL5"
curl -OL "$URL5"

URL6="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/lines/LineMaterial.js"
echo "Downloading $URL6"
curl -OL "$URL6"

URL7="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/lines/LineSegments2.js"
echo "Downloading $URL7"
curl -OL "$URL7"

URL8="https://raw.githubusercontent.com/mrdoob/three.js/${GIT_VERSION}/examples/js/lines/LineSegmentsGeometry.js"
echo "Downloading $URL8"
curl -OL "$URL8"

# Set up directory structure

mkdir build
mv three.min.js build

mkdir -p examples/js/controls
mv OrbitControls.js examples/js/controls

mkdir -p examples/js/lines
mv -t examples/js/lines Line2.js LineGeometry.js LineMaterial.js LineSegments2.js LineSegmentsGeometry.js

# Package
tar czf "$SAGE_ROOT/upstream/threejs-${GIT_VERSION}.tar.gz" build examples 'LICENSE'
rm -rf 'build' 'examples' 'LICENSE'

# Update package info
echo "${GIT_VERSION}" > 'package-version.txt'
"$SAGE_ROOT"/sage --package fix-checksum

